# Environment variables for WallStreetBots production deployment
# Copy to .env and modify values for your environment

# Django settings
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
DJANGO_SETTINGS_MODULE=backend.settings

# Database configuration
DATABASE_URL=postgresql://user:password@localhost:5432/wallstreetbots
DB_NAME=wallstreetbots
DB_USER=wsb_user
DB_PASSWORD=secure-password-here
DB_HOST=localhost
DB_PORT=5432

# Redis configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Trading API keys (keep these secure!)
ALPACA_API_KEY=your-alpaca-key-here
ALPACA_SECRET_KEY=your-alpaca-secret-here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live trading

# Market data APIs
POLYGON_API_KEY=your-polygon-api-key
IEX_API_KEY=your-iex-api-key
YAHOO_API_KEY=your-yahoo-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# Monitoring and observability
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id
PROMETHEUS_GATEWAY_URL=http://localhost:9091

# Email configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Alert configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SMTP_PASSWORD=your-smtp-password
GRAFANA_PASSWORD=admin

# Production settings
WSB_GIT_SHA=
WSB_ENVIRONMENT=production
WSB_LOG_LEVEL=INFO
WSB_MAX_WORKERS=4

# Circuit breaker settings
WSB_CIRCUIT_BREAKER_MAX_DAILY_DRAWDOWN=0.06
WSB_CIRCUIT_BREAKER_MAX_ERROR_RATE=5
WSB_CIRCUIT_BREAKER_MAX_DATA_STALENESS=30

# Risk management
WSB_MAX_PORTFOLIO_DELTA=1000000
WSB_MAX_PORTFOLIO_GAMMA=10000
WSB_MAX_PORTFOLIO_THETA=-1000
WSB_MAX_PORTFOLIO_VEGA=50000
WSB_MAX_BETA_ADJUSTED_EXPOSURE=2000000

# Execution settings
WSB_SHADOW_MODE=false
WSB_CANARY_ALLOCATION_PCT=0.1
WSB_MAX_DAILY_ORDERS=100

# Data quality
WSB_MAX_DATA_STALENESS_SEC=20
WSB_MAX_RETURN_Z_SCORE=6.0

# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com

# Media and static files
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# Legacy settings for compatibility
PAPER_TRADING=True
ENABLE_ALERTS=True
MAX_TOTAL_RISK=0.10
MAX_POSITION_SIZE=0.03