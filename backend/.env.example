# To setup locally rename this to .env and fill in the required values
# Django Configuration
DATABASE_URL=postgres://postgres:password@web-db:5432/db
SECRET_KEY=RandomString123
DEBUG=TRUE

# =============================================================================
# TRADING CONFIGURATION - REQUIRED FOR REAL MONEY TRADING
# =============================================================================

# Alpaca Trading API (Stock/Options Broker)
# Get from: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
# Use paper trading URL for testing: https://paper-api.alpaca.markets
# Use live trading URL for real money: https://api.alpaca.markets
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Real-Time Market Data APIs
# IEX Cloud - Primary market data source
# Get from: https://iexcloud.io/ (Basic plan: $9/month)
IEX_API_KEY=your_iex_api_key_here

# Polygon.io - Options chains and real-time data
# Get from: https://polygon.io/ (Starter plan: $99/month)
POLYGON_API_KEY=your_polygon_api_key_here

# Financial Modeling Prep - Earnings calendar
# Get from: https://financialmodelingprep.com/ (Basic plan: $15/month)
FMP_API_KEY=your_fmp_api_key_here

# NewsAPI - News and sentiment data
# Get from: https://newsapi.org/ (Free tier available)
NEWS_API_KEY=your_news_api_key_here

# Alpha Vantage - Backup market data
# Get from: https://www.alphavantage.co/ (Free tier: 5 API calls/minute)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# =============================================================================
# RISK MANAGEMENT CONFIGURATION
# =============================================================================

# Account Configuration
DEFAULT_ACCOUNT_SIZE=100000.0
MAX_ACCOUNT_RISK_PERCENT=10.0
MAX_POSITION_RISK_PERCENT=2.0
MAX_CONCURRENT_POSITIONS=10

# Safety Limits (CRITICAL FOR WSB STRATEGIES)
WSB_DIP_BOT_MAX_RISK_PERCENT=2.0  # Override default 10% for safety
LOTTO_SCANNER_MAX_RISK_PERCENT=0.5  # Extreme position limits
MAX_DAILY_LOSS_PERCENT=5.0  # Circuit breaker

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/trading.log
ENABLE_TRADE_LOGGING=true

# Monitoring
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS_COLLECTION=true
ALERT_EMAIL=your_email@example.com

# Performance
ENABLE_ASYNC_EXECUTION=true
MAX_CONCURRENT_API_CALLS=10
API_RATE_LIMIT_DELAY=0.1

# =============================================================================
# OPTIONAL: ADVANCED INTEGRATIONS
# =============================================================================

# Discord Webhook for alerts (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# Slack Webhook for alerts (optional)  
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_here

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================

# Set to true to enable paper trading mode (no real money)
PAPER_TRADING_MODE=true

# Set to true to enable mock data (for testing without API keys)
USE_MOCK_DATA=false

# Set to true to enable dry run mode (no actual trades)
DRY_RUN_MODE=false