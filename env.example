# WallStreetBots Configuration
# Copy this file to .env and fill in your actual values

# Trading Account Settings
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading by default

# Alert Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_TO=recipient@example.com

# Risk Management
DEFAULT_ACCOUNT_SIZE=100000
DEFAULT_RISK_PCT=0.10
MAX_POSITIONS_PER_STRATEGY=5
DAILY_LOSS_LIMIT=0.05

# Market Data
YAHOO_FINANCE_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=5

# Database (if using Django)
DATABASE_URL=postgresql://user:password@localhost:5432/wallstreetbots
SECRET_KEY=your_django_secret_key_here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/wallstreetbots.log
